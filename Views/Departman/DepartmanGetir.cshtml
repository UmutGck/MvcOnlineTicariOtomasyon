@model MvcOnlineTicariOtomasyon.Models.Siniflar.Departman

@{
    ViewBag.Title = "DepartmanGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelleme</h2>
<br />
@using (Html.BeginForm("DepartmanGuncelle", "Departman", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.DepertmanAd)
        @Html.TextBoxFor(x => x.DepertmanAd, new { @class = "form-control" })
        @Html.HiddenFor(x => x.Depertmanid)
    </div>
    <button class="btn btn-default" style="background-color:yellowgreen">Güncelle</button>

}